# ============================================================================
# ANIP - Automated News Intelligence Pipeline
# Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env
# ============================================================================

# =============================================================================
# AIRFLOW CONFIGURATION
# =============================================================================
AIRFLOW_UID=50000
AIRFLOW_GID=0

# Note: Authentication is DISABLED - see scripts/webserver_config.py
# Anonymous users have Admin role by default (for development)
# No admin credentials needed!

# Airflow Metadata Database
AIRFLOW_DB=airflow
AIRFLOW_DB_USER=airflow
AIRFLOW_DB_PASSWORD=airflow_password_here

# =============================================================================
# POSTGRESQL DATABASE
# =============================================================================
POSTGRES_USER=anip
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=anip
POSTGRES_PORT=5432
POSTGRES_HOST=postgres

# =============================================================================
# MLFLOW CONFIGURATION
# =============================================================================
MLFLOW_PORT=5000
MLFLOW_TRACKING_URI=http://mlflow:5000

# =============================================================================
# FASTAPI SERVICE
# =============================================================================
API_PORT=8000
CORS_ORIGINS=*

# =============================================================================
# SPARK CONFIGURATION
# =============================================================================
SPARK_MASTER_RPC_PORT=7077
SPARK_MASTER_WEB_PORT=9090
SPARK_WORKER_WEB_PORT=9091

# =============================================================================
# EMBEDDING SERVICE
# =============================================================================
EMBEDDING_SERVICE_URL=http://embedding-service:5003

# =============================================================================
# NEWS API KEYS
# Get your free API keys from the following sources:
# =============================================================================

# NewsAPI.org - https://newsapi.org/register
# Free tier: 100 requests/day
NEWSAPI_KEY=your_newsapi_key_here

# NewsData.io - https://newsdata.io/register
# Free tier: 200 requests/day
NEWSDATA_KEY=your_newsdata_key_here

# TheNewsAPI - https://www.thenewsapi.com/register
# Free tier: 100 requests/day (3 articles per request)
THENEWSAPI_KEY=your_thenewsapi_key_here

# WorldNewsAPI - https://worldnewsapi.com/register
# Free tier: 1000 requests/day
WORLDNEWS_KEY=your_worldnews_key_here

# MediaStack - https://mediastack.com/signup/free
# Free tier: 500 requests/month
MEDIASTACK_KEY=your_mediastack_key_here

# GDELT Project - No API key required (completely free)
GDELT_PROJECT_ID=

# =============================================================================
# OPENAI API (Required for AI Chat Agent)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# KAFKA CONFIGURATION (Optional - if using Kafka)
# =============================================================================
KAFKA_EXTERNAL_PORT=9092
KAFKA_INTERNAL_PORT=29092
KAFKA_UI_PORT=8081